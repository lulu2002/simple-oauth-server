{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../shared"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./jest.setup.ts"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "baseUrl": "./",
    "moduleResolution": "Node",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/src/*"
      ]
    }
  }
}
