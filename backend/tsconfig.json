{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@test-fixture/*": [
        "test-fixture/*"
      ],
      "@adapter/*": [
        "src/adapter/*"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test-fixture/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
